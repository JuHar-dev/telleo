{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:security/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "ignorePatterns": ["**/*.spec.ts"],
  "plugins": ["@typescript-eslint", "security"],
  "rules": {
    "no-extra-semi": "error",
    "semi": "off",
    "no-unused-vars": [
      "warn",
      {
        "args": "none"
      }
    ]
  }
}
